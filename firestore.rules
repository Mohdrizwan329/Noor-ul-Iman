rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ============================================
    // USER DATA COLLECTIONS
    // ============================================

    // Users collection - profile data
    match /users/{userId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if isOwner(userId);
    }

    // OTPs collection (for password reset / email verification)
    match /otps/{email} {
      allow read, write: if true;
    }

    // ============================================
    // ISLAMIC CONTENT COLLECTIONS
    // (Public read, authenticated write for migration)
    // ============================================

    match /content_metadata/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /duas/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /allah_names/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /kalmas/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /islamic_names/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /hadith_collections/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /hadith_collections_info/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /tasbih_dhikr/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /basic_amal/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /greeting_cards/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /sample_hadiths/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /hajj_guide/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /ramadan_duas/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /zakat_guide/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /quran_metadata/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /quran_surahs/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /fasting_data/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /app_data/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // ============================================
    // TRANSLATION & LOCALIZATION COLLECTIONS
    // ============================================

    match /ui_translations/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /settings_translations/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /notification_strings/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /calendar_strings/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /name_transliterations/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /hadith_translations/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /language_names/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // ============================================
    // SCREEN CONTENT COLLECTIONS
    // ============================================

    match /home_screen_content/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /prayer_times_screen_content/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /fasting_times_content/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /notifications_screen_content/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /settings_screen_content/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /qibla_content/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /tasbih_screen_content/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /calendar_screen_content/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /zakat_calculator_content/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /zakat_guide_screen_content/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /quran_screen_content/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /about_screen_content/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /privacy_policy_screen_content/{document} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // ============================================
    // DEFAULT DENY
    // ============================================

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
